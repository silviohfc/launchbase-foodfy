{% extends "layout.njk" %}

{% block content %}

    <section id="topRecipes">

        <div id="topRecipesGrid" class="admin chefs">
            {% for chef in chefs %}

                <div class="adminChefCard" id="{{ chef.id }}">
                    <div class="img" style="background-image: url({{ chef.avatar_url }});"></div>
                    <div class="desc">
                        <h4>{{ chef.name }}</h4>
                        <p>{{ chef.total_recipes }} 
                            {% if chef.total_recipes > 1 %}
                                receitas
                            {% else %}
                                receita
                            {% endif %}
                        </p>
                    </div>
                </div>

            {% endfor %}

        </div>
    </section>

    <script src="/scripts.js"></script>
{% endblock %}
   