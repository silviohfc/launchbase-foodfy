{% extends "admin/layout.njk" %}

{% block content %}

    <section id="topRecipes">

        <h1>Gerenciar chefs</h1>

        <div id="topRecipesGrid" class="admin chefs">
            {% for chef in chefs %}

                <div class="adminChefCard" id="{{ chef.id }}">
                    <div class="img" style="background-image: url({{ chef.avatar_path }});"></div>
                    <div class="desc">
                        <h4>{{ chef.name }}</h4>
                        <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </section>

    <script src="/scripts.js"></script>
{% endblock %}
   