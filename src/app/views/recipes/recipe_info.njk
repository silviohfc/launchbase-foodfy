{% extends "layout.njk" %}

{% block content %}

    <div class="recipeInfo">

        <div class="recipeImg" style="background-image: url({{recipe.image}});"></div>
        <h4>{{recipe.title}}</h4>
        <p>por {{recipe.author}}</p>

        <div class="recipeContent">

            <div id="ingredients">
                <h2>Ingredientes <span class="descToggle">ESCONDER</span></h2>
                <div class="description active">
                    <ul>
                        {% for ingredient in recipe.ingredients %}
                            <li>{{ingredient}};</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div id="preparationMode">
                <h2>Modo de preparo <span class="descToggle">MOSTRAR</span></h2>
                <div class="description">
                    {% for step in recipe.steps %}
                        <p>{{step}}</p>
                    {% endfor %}
                </div>
            </div>

            <div id="extraInfo">
                <h2>Informações adicionais <span class="descToggle">ESCONDER</span></h2>
                <div class="description active">
                    <p>{{recipe.information}}</p>
                </div>
            </div>

        </div>
        
    </div>

    <script src="/scripts.js"></script>

{% endblock %}