<div class="formItem">
    <h5>Imagem da receita</h5>
    <input 
        type="text" 
        name="image" 
        placeholder="http://" 
        value="{{ recipe.image }}"
        required
    >
</div>

<div class="formItem">
    <h5>Título da receita</h5>
    <input 
        type="text" 
        name="title" 
        placeholder="Ex.: Bolo de cenoura" 
        value="{{ recipe.title }}"
        required
    >
</div>

<div class="formItem">
    <h5>Autor</h5>
    <input 
        type="text" 
        name="author" 
        placeholder="Ex.: Silvio Henrique" 
        value="{{ recipe.author }}"
        required
    >
</div>

<div class="formItem">
    <h5>Ingredientes</h5>
    <div id="ingredients">
        <div class="ingredient">

            {% if not recipe %}
                <input type="text" name="ingredients[]" placeholder="Ex.: 1 xícara de farinha" required>
            {% endif %}

            {% for ingredient in recipe.ingredients %}
                <input 
                    type="text" 
                    name="ingredients[]" 
                    placeholder="Ex.: 1 xícara de farinha" 
                    value="{{ ingredient }}"
                    required
                >
            {% endfor %}

        </div>
    </div>
    <button type="button" class="add-input" name="ingredient">Adicionar novo ingrediente</button>
</div>

<div class="formItem">
    <h5>Modo de preparo</h5>
    <div id="steps">
        <div class="step">

            {% if not recipe %}
                <input type="text" name="steps[]" placeholder="Ex.: Colocar no forno por 40 minutos" required>
            {% endif %}

            {% for step in recipe.steps %}
                <input 
                    type="text" 
                    name="steps[]" 
                    placeholder="Ex.: 1 xícara de farinha" 
                    value="{{ step }}"
                    required
                >
            {% endfor %}

        </div>
    </div>
    <button type="button" class="add-input" name="step">Adicionar novo passo</button>
</div>

<div class="formItem">
    <h5>Informações adicionais</h5>
    <textarea type="text" name="information">{{ recipe.information }}</textarea>
</div>